<html lang="en">
<%- include("./partial/head.ejs") %>

<body>
  <%- include("./partial/navbar.ejs") %>


    <h1>Products</h1>
  <div class="blogs contented">
    <% if (products.length > 0) { %>
      <% products.forEach(product => { %>
        <div class="m1-2 mb-1 img-para" >
          <img src="<%= product.imageUrl %>" alt="shoe/wears/accessories" class="photos">
          <p>Name: <%= product.name %></p>
          <p>Quantity: <%= product.Quantity %> in stock</p>
          <p>Price: <%= product.price %></p>
          <p>size: <%= product.size %></p>
          <h3 class="imp-header"><a href="/api/product/buy/<%= product._id %>">Buy</a></h3>

          <% if (Type === 'Admin') { %>
            <h3 class="imp-header"><a href="/api/products/edit/<%= product._id %>">Edit</a></h3>
          <% } %>

        </div>

      <% }) %>
    <% } else { %>
      <p>There are no products to display...</p>
    <% } %>

    <br/>
    <% if (Type === 'Admin') { %>
    <a href="/newproduct" class="btn btn-warning addpb">Add new Product(s)</a>
    <% } %>
  </div>

  <%- include("./partial/footer.ejs") %>
</body>
</html>