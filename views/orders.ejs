<html lang="en">
  <%- include("./partial/head.ejs") %>

  <body>
    <%- include("./partial/navbar.ejs") %>
    <h1 class="yuse">Orders</h1>
    <div class="blogs prodiv">
      <% if (orders.length > 0) { %> <% orders.forEach(order => { %>
      <div class="m1-2 mb-1 img-para">
        <h6><b>Transaction reference:</b> <%= order.reference %></h6>
        <h6><b>Product name:</b> <%= order.name %></h6>
        <h6><b>Price:</b> <%= order.price %></h6>
        <h6><b>Quantity:</b> <%= order.quantity %></h6>
        <div class="col-md-6 newprod mb-3">
          <form action="/users/review/product" method="POST">
            <div class="form-group">
              <input
                type="hidden"
                name="name"
                value="<%= order.name %>"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary">Review</button>
          </form>
        </div>
      </div>

      <% }) %> <% } else { %>
      <p class="alert alert-secondary mb-3 ml-4">
        You have no previous transaction
      </p>
      <% } %>
    </div>

    <!-- <%- include("./partial/footer.ejs") %> -->
  </body>
</html>
